<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="WitcherGuiApp.Views.MainWindow"
        x:Name="MainWindowRoot"
        Title="Witcher Save Manager" Height="450" Width="800">

    <StackPanel Margin="10,0,10,0" Height="378" VerticalAlignment="Center">
        <!-- Load Button -->
        <Button Content="Find Witcher Save Games"
                Click="FetchSaves_Click"
                Width="180"
                Margin="0,0,0,10"
                HorizontalAlignment="Left"/>

        <!-- Status message -->
        <TextBlock Text="{Binding StatusMessage}" Margin="0,0,0,10" FontWeight="Bold" Foreground="DarkRed" Height="29"/>

        <!-- Delete Button -->
        <Button Content="Delete Selected"
                Command="{Binding DeleteSelectedCommand}"
                Margin="0,0,0,10"
                Width="120"
                HorizontalAlignment="Left"/>

        <!-- Save Game Grid -->
        <DataGrid ItemsSource="{Binding Saves}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  SelectionMode="Extended" av:IsHidden="True">

            <DataGrid.Columns>
                <!-- Checkbox Column with header binding -->
                <DataGridTemplateColumn Width="50">
                    <DataGridTemplateColumn.Header>
                        <CheckBox IsChecked="{Binding DataContext.AreAllSelected, ElementName=MainWindowRoot, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      Focusable="False"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Read-only display columns -->
                <DataGridTextColumn Header="Filename"
                                    Binding="{Binding FileName}"
                                    IsReadOnly="True"
                                    Width="*"/>
                <DataGridTextColumn Header="Modified"
                                    Binding="{Binding ModifiedTimeIso}"
                                    IsReadOnly="True"
                                    Width="150"/>
                <DataGridTextColumn Header="Size (Bytes)"
                                    Binding="{Binding Size}"
                                    IsReadOnly="True"
                                    Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</Window>
