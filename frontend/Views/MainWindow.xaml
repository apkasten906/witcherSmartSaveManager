<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="WitcherGuiApp.Views.MainWindow"
        Title="Witcher Save Manager" Height="450" Width="800">

    <Grid>
        <Button Content="Find Witcher Save Games"
                Click="FetchSaves_Click"
                Margin="10,10,10,0"
                Height="30"
                VerticalAlignment="Top"/>

        <TextBlock Text="{Binding StatusMessage}"
                   Margin="10,45,10,0"
                   Height="20"
                   VerticalAlignment="Top"
                   Foreground="DarkRed"
                   FontWeight="SemiBold" />

        <ListBox ItemsSource="{Binding Saves}"
                 Margin="10,70,10,10" av:ItemsSource="{av:SampleData ItemCount=5}" SelectionChanged="ListBox_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding FileName, FallbackValue='(no filename)'}" Foreground="Black" FontWeight="Bold"/>
                        <TextBlock Text="{Binding ModifiedTimeIso, FallbackValue='(no timestamp)'}" Foreground="Black" FontStyle="Italic"/>
                        <TextBlock Text="{Binding Size, StringFormat='{}{0:N0} bytes'}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>