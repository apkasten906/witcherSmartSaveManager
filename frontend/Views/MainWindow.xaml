<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:viewmodels="clr-namespace:WitcherSmartSaveManager.ViewModels"
        av:DataContext="{av:DesignInstance Type=viewmodels:MainViewModel}" 
        mc:Ignorable="av" 
        x:Class="WitcherSmartSaveManager.Views.MainWindow"
        x:Name="MainWindowRoot"
        Title="Witcher Save Manager" Height="450" Width="800"
        Icon="/Views/Assets/icon_wolf_save.ico">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Status + Buttons -->
            <RowDefinition Height="*"/>
            <!-- DataGrid (expands) -->
        </Grid.RowDefinitions>

        <!-- Status + Buttons container -->
        <StackPanel Orientation="Vertical" Grid.Row="0">
            <!-- Language Selector -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="{DynamicResource Language_Label}" Width="70"/>
                <ComboBox Width="120"
                          SelectedValue="{Binding SelectedLanguage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          SelectedValuePath="Tag"
                          SelectionChanged="LanguageSelector_Changed">
                    <ComboBoxItem Content="English" Tag="en" />
                    <ComboBoxItem Content="Deutsch" Tag="de" />
                </ComboBox>
            </StackPanel>

            <Button Content="{DynamicResource FindSaves_Label}"
                    Click="FetchSaves_Click"
                    Width="180"
                    Margin="0,0,0,5"
                    HorizontalAlignment="Left"/>

            <!-- Steam Cloud Status and Controls -->

            <!-- GOG Cloud Status and Controls -->

            <!-- Custom Save Folder Selection -->
            <Label HorizontalAlignment="Left" x:Name="SaveFolderLabel" Content="{DynamicResource SaveFolder_Label}" />
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBox Text="{Binding CustomSaveFolderPath}" TextWrapping="Wrap" Width="500" HorizontalAlignment="Left"/>
                <Button Command="{Binding CustomSaveFolderPickerCommand}" Content="..." Width="20" HorizontalAlignment="Left" Margin="10,0,0,0" />
            </StackPanel>

            <!--Backup Folder Location Input-->
            <Label HorizontalAlignment="Left" x:Name="BackupLocationLabel" Content="{DynamicResource BackupLocation_Label}" />
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBox Text="{Binding BackupFilePath}"  TextWrapping="Wrap" Width="500" HorizontalAlignment="Left"/>
                <Button Command="{Binding BackupLocationPickerCommand}" Content="..." Width="20" HorizontalAlignment="Left" Margin="10,0,0,0" />
            </StackPanel>
                
            <Button Command="{Binding BackupSelectedCommand}" 
                    Content="{DynamicResource BackupButton_Label}" 
                    Width="150" 
                    HorizontalAlignment="Left" 
                    Margin="0,0,0,10" 
                    x:Name="BackupButton"/>
            
                
            <Button Content="{DynamicResource DeleteButton_Label}"
                    Command="{Binding DeleteSelectedCommand}"
                    Width="150"
                    HorizontalAlignment="Left"
                    x:Name="DeleteButton"/>
            
            <TextBlock Text="{Binding StatusMessage}"
                       FontWeight="Bold"
                       Foreground="DarkRed"
                       />
            
            <ProgressBar Height="10" HorizontalAlignment="Center" />
            <Label Content="Label"/>
        </StackPanel>

        <!-- Scrollable, resizable DataGrid -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Saves}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  IsReadOnly="False"
                  SelectionMode="Extended">

            <DataGrid.Columns>
                <!-- Checkbox Column with header binding -->
                <DataGridTemplateColumn Width="50">
                    <DataGridTemplateColumn.Header>
                        <CheckBox IsChecked="{Binding DataContext.AreAllSelected, ElementName=MainWindowRoot, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      Focusable="False"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Thumbnail">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding SaveFile.ScreenshotPath}"
                               Width="120"
                               Height="68"
                               Stretch="Uniform"
                               Margin="2"
                               Visibility="{Binding ScreenshotExists, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Read-only display columns -->
                <DataGridTextColumn Header="Filename"
                                    Binding="{Binding FileName}"
                                    IsReadOnly="True"
                                    Width="*"/>
                <DataGridTextColumn Header="Modified"
                                    Binding="{Binding ModifiedTimeIso}"
                                    IsReadOnly="True"
                                    Width="150"/>
                <DataGridTextColumn Header="Size (Bytes)"
                                    Binding="{Binding Size}"
                                    IsReadOnly="True"
                                    Width="100"/>
                <DataGridTemplateColumn IsReadOnly="True" Width="70">
                    <DataGridTemplateColumn.Header>Backed Up
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="✔"
                               Foreground="Green"
                               FontSize="16"
                               HorizontalAlignment="Center"
                               Visibility="{Binding BackupExists, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
