<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="WitcherGuiApp.Views.MainWindow"
        Title="Witcher Save Manager" Height="450" Width="800">

    <Grid>
        <Button Content="Find Witcher Save Games"
                Click="FetchSaves_Click"
                Margin="10,10,10,0"
                Height="30"
                VerticalAlignment="Top"/>

        <TextBlock Text="{Binding StatusMessage}"
                   Margin="10,45,10,0"
                   Height="20"
                   VerticalAlignment="Top"
                   Foreground="DarkRed"
                   FontWeight="SemiBold" />

        <StackPanel Orientation="Vertical" Margin="10,70,10,10">
            <CheckBox Content="Select All" IsChecked="{Binding AreAllSelected, Mode=TwoWay}" Margin="0,0,0,5"/>
            <Button Content="Delete Selected"
                Command="{Binding DeleteSelectedCommand}"
                Margin="0,10,0,0"
                Width="120"
                HorizontalAlignment="Left"/>


            <DataGrid ItemsSource="{Binding Saves}" AutoGenerateColumns="False" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn Header="Select" Binding="{Binding IsSelected, Mode=TwoWay}" Width="60"/>
                    <DataGridTextColumn Header="Filename" Binding="{Binding FileName}" />
                    <DataGridTextColumn Header="Modified" Binding="{Binding ModifiedTimeIso}" />
                    <DataGridTextColumn Header="Size (Bytes)" Binding="{Binding Size}" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>